{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchFileNames": [
                "etc/workflow-skeleton/**"
            ],
            "branchPrefix": "renovate/skelleton/github-actions/",
            "commitMessagePrefix": "[\u2620\ufe0f]",
            "labels": [
                "\u2620\ufe0f"
            ]
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchFileNames": [
                ".github/workflows/automerge.yml",
                ".github/workflows/setup-clients.yaml",
                ".github/workflows/subsplit.yaml"
            ],
            "branchPrefix": "renovate/root/github-actions/",
            "commitMessagePrefix": "[\ud83e\udeb5]",
            "labels": [
                "\ud83e\udeb5"
            ]
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchFileNames": [
                ".github/workflows/**GitHub.yaml"
            ],
            "branchPrefix": "renovate/GitHub/github-actions/",
            "commitMessagePrefix": "[GitHub]",
            "labels": [
                "GitHub"
            ],
            "enabled": true
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchFileNames": [
                ".github/workflows/**GitHubEnterpriseCloud.yaml"
            ],
            "branchPrefix": "renovate/GitHubEnterpriseCloud/github-actions/",
            "commitMessagePrefix": "[GitHubEnterpriseCloud]",
            "labels": [
                "GitHubEnterpriseCloud"
            ],
            "enabled": false
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "matchFileNames": [
                ".github/workflows/**GitHubAE.yaml"
            ],
            "branchPrefix": "renovate/GitHubAE/github-actions/",
            "commitMessagePrefix": "[GitHubAE]",
            "labels": [
                "GitHubAE"
            ],
            "enabled": false
        }
    ],
    "github-actions": {
        "fileMatch": [
            "^(workflow-templates|etc/workflow-skeleton|\\.github/workflows)/[^/]+\\.ya?ml$",
            "(^|/)action\\.ya?ml$"
        ]
    },
    "extends": [
        "github>wyrihaximus/renovate-config//internal/base",
        ":prHourlyLimitNone",
        ":prConcurrentLimitNone"
    ]
}
